<div class="row">
    <div class="col s12">
        <h2 class="center-align">Courses List</h2>
    </div>
</div>

<div class="row">
   
    
      <% @courses.all.each  do  |course| %>
        <div class="col s12 m6">
          <div class="card orange darken-4">
              <div class="card-content white-text">
                <span class="card-title"><%=course.short_name %> <%=course.name %></span>
                <p><%=course.description %></p>
              </div>
              <div class="card-action">
                <% if logged_in? && !current_user.courses.include?(course) %>
                  <%= link_to 'Enroll', course_enroll_path(course_id: course.id),method: :post %>
                <% end %>
                <%= link_to 'details', course_path(course) %>
              </div>
            </div>
          </div>
          
      <% end %>
    
  
    </div>
