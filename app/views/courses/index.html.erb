<div class="row">
    <div class="col s12">
        <h2 class="center-align">Courses List</h2>
    </div>
</div>

<div class="row">
  <% @courses.all.each  do  |course| %>
       <div class="col s12 m4">
      <div class="card orange darken-4">
        <div class="card-content white-text">
          <span class="card-title"><%=course.short_name %> <%=course.name %></span>
          <p><%=course.description %></p>
        </div>
        <div class="card-action">
          <a href="#">Enroll</a>
          <a href="#">Details</a>
        </div>
      </div>
    </div>
    <% end %>
</div>
