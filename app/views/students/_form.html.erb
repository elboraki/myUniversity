
<%= render 'shared/errors',obj:@student %>
<div class="container">
    <div class="row center sign-up-form">
        <div class="col s12 m12 l12">
            <div class="card-panel">
                <h3 class="center-align"><%= @student.new_record? ? "Sign up" : "Edit student" %></h3>
                <div class="row">
                        <%= form_for(@student,html:{class: "col s12"}) do |f| %>
                    <div class="row">
                        <div class="input-field col s12">
                             <%= f.text_field :name ,placeholder:"Enter your name"%>
                             <%= f.label :name ,class:"active"%>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                             <%= f.email_field :email ,placeholder:"enter your email"%>
                             <%= f.label :email ,class:"active"%>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                             <%= f.password_field :password ,placeholder:"choose your password"%>
                             <%= f.label :password ,class:"active"%>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                             <%= f.password_field :password_confirmation ,placeholder:"confirm your password"%>
                             <%= f.label :password_confirmation,class:"active" %>
                        </div>
                    </div>

                    <%= f.submit @student.new_record? ? :"submit":"Edit",class:"waves-effect waves-light blue btn" %>
 
                <% end %>
                </div>
            
            </div>
        </div>
    </div>
</div>