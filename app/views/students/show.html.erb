<div class="row">
    <div class="col s12">
        <h2 class="center-align">Show student</h2>
    </div>
</div>
<div class="container">
    <div class="col s12 m12">
      <div class="card orange darken-4">
        <div class="card-content white-text">
          <span class="card-title">Name:<%= @student.name %></span>
          <p>Email: <%= @student.email %></p>
          <p>
            <span>Course enrollement:</span>
            <ul>
              <% @student.courses.each do |course| %>
                  <li><%= course.name %></li>
              <% end %>
            </ul>
          </p>
        </div>
        <div class="card-action">
          <%= link_to edit_student_path(@student) ,class:"waves-effect waves-light  grey darken-2 btn"  do %>
                Edit profil <i class="material-icons right">create</i>
          <% end %>
        </div>
      </div>
    </div>
</div>

 